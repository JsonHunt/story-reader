*
	-webkit-tap-highlight-color rgba(0,0,0,0) /* make transparent link selection, adjust last value opacity 0 to 1.0 */

body
		-webkit-touch-callout none                /* prevent callout to copy image, etc when tap to hold */
		-webkit-text-size-adjust none             /* prevent webkit from resizing text to fit */
		-webkit-user-select none                  /* prevent copy paste, to allow, change 'none' to 'text' */

		background-attachment fixed
		font-family 'HelveticaNeue-Light', 'HelveticaNeue', 'Helvetica', 'Arial', 'sans-serif'
		font-size 18px
		height 100%
		margin 0px
		padding 0px
		width 100%

button
	text-transform uppercase
	padding 10px 20px
	margin 10px 0
	width 100%

.screen
	.title
		text-align center
		border-bottom 1px solid #666
		padding 10px
		font-size 20px
		background-color #80d1f7

	.header-icon-right
		position absolute
		top 0
		right 0
		padding 10px 20px


.story-list
	margin 10px 0

.story-list .story
	padding 10px
	text-align center
	border-bottom 1px solid #666
	font-size 18px
	position relative

.story-edit
	position absolute
	top 0
	right 0
	padding 10px

input, textarea
	width 100%
	padding 10px
	font-size 16px
	margin-bottom 5px

.word

.buttons
	text-align center

.content
	padding 10px

.continue.button, .end.button

.sentence
	text-align center
	margin 20px
	font-size 30px

.word.active
	border-bottom 1px solid black

.recording.screen .word-list
	width 100%
	text-align center
	border-collapse collapse

.recording.screen .word-list td
	border 1px solid #000

.recording.screen .word-list .word
	padding 10px
	vertical-align middle
	font-size 20px
	text-align left
