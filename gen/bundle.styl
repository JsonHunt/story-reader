$light = #80c6fc
$medium = #42adff
$dark = #0991f9
$verydark = #023E70

fle

html
	height 100%

body
	padding 0
	margin 0
	height 100%
	display flex
	flex-direction column
	background-color black
	font-size 20px
	overflow-y: auto

input[type='text'], textarea
	padding 10px 15px
	border-radius 2px
	border 1px solid $medium
	margin 10px
	margin-bottom 0
	background-color $verydark
	color white

.note
	padding 20px
	text-align center
	color $dark
	text-transform uppercase

.list
	overflow-y auto
	>.item
		border-bottom 1px solid $medium
		cursor default
		display flex
		.text
			flex 1
			display flex
			align-items center
			padding 10px
			color white
		.icon
			padding 10px


.noselect
	-webkit-touch-callout: none
	user-select: none

.appheader

	background-color $dark
	padding 10px
	display none
	align-items center
	justify-content center
	border-bottom $dark
	.title
		font-weight bold
		color white

.appcontent
	flex 1 1
	display flex
	flex-direction column
	>.page
		flex 1
		display flex
		flex-direction column
		>.header
			background-color $dark
			color white
			font-weight bold
			text-transform uppercase
			display flex
			align-items center
			>.icon
				padding 0 25px
				color white
				display flex
				align-items center
				align-self stretch
			>.left.icon
				border-right 1px solid $verydark
			>.right.icon
				border-left 1px solid $verydark
			>.title
				flex 1
				padding 15px 20px
		>.header2
			min-height 50px
			border-top 1px solid $verydark
			justify-content flex-end
			text-transform: none
		>.body
			flex 1
			display flex
			flex-direction column

		>.footer
			padding 10px
			border-top 1px solid $dark

.button
	background-color $dark
	border-radius 4px
	padding 20px
	text-align center
	color	white

.form.center
	margin auto
	width 500px
	padding: 10px
	border: 1px solid #ccc
	background-color: #ddd

.edit.page
	.hide
		display none

	.story
		margin-bottom 10px
		flex 1

	.button
		flex 1
	.button.delete
			border-right: 1px solid $verydark
			background-color red
			border-radius: 0

.fa-stack
	.fa-play.fa-stack-1x
		position relative
		left: 3px
		transform scale(0.8)
	.fa-stop.fa-stack-1x
		transform scale(0.8)

.page
	background-image url("img/sky.jpg")
	background-size cover

.home.page
	.note
		margin-top 50px
	.list .item .title
		color	white
		padding 20px 25px


.manage.page
	flex 1
	display flex
	flex-direction column
	.list
		flex 1

	i.fa.back-button
		color white

	i.fa
		color: $dark

	.icon.delete i
		color: red

	i.fa-play
		transform scale(0.8)
		position relative
		left 3px
	i.fa-stop
		transform scale(0.8)
		// position relative
		// left 3px

.record.page

	.note
		visibility: hidden

	.recarea
		display flex
		flex-direction row
		flex 1

	

	.record, .stop
		color: $medium
		margin auto
		transform scale(4)

	.save, .play
		color: green
		margin auto
		transform scale(2)
		visibility: hidden
		z-index 1000
		// position: relative
		// top: -10px

	.input-error
		padding 10px
		height 50px
		margin 10px
		margin-top 0
		margin-bottom 40px
		color red
		border 1px solid red
		text-align center
		visibility hidden

	.visible
		visibility visible

.recording.page
	color white

.session.page

	.in-progress
		background-color green
		color white
		padding 10px
		margin 10px
		text-align center

	.no-power
		border 1px solid red
		background-color red
		color	white
		padding 10px
		margin 10px
		text-align center

	.lbl
		background-color $verydark
		padding 10px
		color white

	.delay, .duration
		display flex
		align-content center
		align-items center
		background-color $dark
		>.button
			flex 1
			padding: 15px 0
			border-left: 1px solid $verydark
			text-align center
		>.button.active
			background-color $medium
		>.button:first-child
			border-left: none

	.start
		color: $medium
		margin auto
		transform scale(3)

	.stop
		color: $medium
		margin auto
		transform scale(4)

	.fa.fa-play
		position relative
		left 3px

	.fa.fa-stop
		transform scale(0.8)

.story.page
	
	.active, .recorded
		background-color green

	.sentence
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		padding: 20px;

	.word
		color white
		font-size 30px

	.word.capitalized
		text-transform: uppercase
		font-size 25px

	.playing
		text-decoration underline
	.buttons
		display flex
		.previous, .next
			flex 1
			margin 0 1px

