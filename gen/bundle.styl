$light = #80c6fc
$medium = #42adff
$dark = #0991f9
$verydark = #023E70

html
	height 100%
	background-color white

body
	padding 0
	margin 0
	height 100%
	display flex
	flex-direction column
	background-color white
	color black
	font-family Arial,sans-serif
	font-size 20px
	overflow-y: auto

input[type='text'], textarea
	padding 10px 15px
	border-radius 2px
	border 1px solid $medium
	// margin 3px
	font-size 18px
	// margin 10px
	// margin-bottom 0
	// background-color $verydark
	// color white

.floating-icon


.action-button
	width 50px
	height 50px
	border-radius 50px
	background-color $verydark
	color white
	border 1px solid $light

.note
	padding 20px
	text-align center
	color $dark
	text-transform uppercase

.list
	overflow-y auto
	>.item
		border-bottom 1px solid $medium
		cursor default
		display flex
		.text
			flex 1
			display flex
			align-items center
			padding 10px
			color white
		.icon
			padding 10px


.noselect
	-webkit-touch-callout: none
	user-select: none

.appheader

	background-color $dark
	padding 10px
	display none
	align-items center
	justify-content center
	border-bottom $dark
	.title
		font-weight bold
		color white

.appcontent
	flex 1 1
	display flex
	flex-direction column
	>.page
		flex 1
		display flex
		flex-direction column
		>.header
			background-color $dark
			color white
			font-weight bold
			text-transform uppercase
			display flex
			align-items center
			>.icon
				padding 0 25px
				color white
				display flex
				align-items center
				align-self stretch
			>.left.icon
				border-right 1px solid $verydark
			>.right.icon
				border-left 1px solid $verydark
			>.title
				flex 1
				padding 15px 20px
		>.header2
			min-height 40px
			border-top 1px solid $verydark
			justify-content flex-end
			text-transform: none
			>.icon
				padding 0 15px
		>.body
			flex 1
			display flex
			flex-direction column

		>.footer
			padding 10px
			border-top 1px solid $dark

.button
	background-color $dark
	border-radius 4px
	padding 20px
	text-align center
	color	white

.form.center
	margin auto
	width 500px
	padding: 10px
	border: 1px solid #ccc
	background-color: #ddd

.row
	display flex
	flex-direction row

.column
	display flex
	flex-direction column

.fill
	flex 1

.center
	display flex
	justify-content center
	align-items center

.vcenter
	display flex
	align-items center

.hcenter
	display flex
	justify-content center

i.fa, .icon
	@extends .center

.pad
	padding 10px



.auto-scroll
	overflow-y auto

.scroll
	overflow-y scroll

.list
	@extends .scroll, .fill
	.item
		@extends .row
		min-height 60px

		border-bottom: 1px solid $light
		.title
			@extends .fill
			@extends .vcenter
			padding 15px
		i.fa
			width 60px
			border-left 1px solid $light

.bar
	@extends .row
	background-color $dark
	border-bottom 1px solid $light
	color white
	font-weight bold
	align-items stretch
	min-height 40px
	// border-top 1px solid $verydark
	// border-bottom 1px solid $verydark
	i.fa, .icon
		width 40px
		color white
		&.left
			border-right 1px solid $verydark
		&.right
			border-left 1px solid $verydark
		&.tapped
			background-color $light
		&.active
			background-color $light
		// &[tap]:hover
		// 	background-color $medium
	>.title
		flex 1
		padding-left 10px
		@extends .vcenter

.edit.page
	.hide
		display none

	.story
		margin-bottom 10px
		flex 1

	.button
		flex 1
	.button.delete
			border-right: 1px solid $verydark
			background-color red
			border-radius: 0

.fa-stack
	.fa-play.fa-stack-1x
		position relative
		left: 3px
		transform scale(0.8)
	.fa-stop.fa-stack-1x
		transform scale(0.8)

.page
	// background-image url("img/sky.jpg")
	// background-size cover
	// background-color black

.home.page
	position relative
	.story-title
		padding 10px
		border-bottom 1px solid #999
	.new-story
		position absolute
		bottom 20px
		right 20px
		background-color $light
		&.touched
			background-color $medium
	.thumb
		max-width: 100px;
		max-height: 100px;

	.cap-toggle
		width 100px

	.note
		margin-top 50px



