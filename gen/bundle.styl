.recording.page
	color white

.image-query
	padding: 10px;
	font-size: 20px;
	font-family: Arial;
	margin: 5px;

i.refresh-search
	width 50px

.search-results
	.item
		width 100%

.page-text-area
	font-size 30px
	padding 10px
	padding-top 30px
	position relative
	min-height 150px

	.text
		padding: 10px;
		border 1px solid white
		text-align center

	.word-outer
		position relative
		left 4px
		display: inline-block

	textarea
		text-align center
		font-family Arial
		font-size 30px
		padding 10px
		margin-bottom 2px

.image-area
	position relative
	border-top 1px solid gray
	.image-placeholder
		border 1px solid gray
		margin: 20%
		width: 60%

	.page-image
		width: 95%;
		margin: 2.5%;
		max-height 100%

.float
	position absolute
	&.top
		top 10px
	&.right
		right 10px
	&.row.right
		right 25px
	i.fa
		@extends .center
		color black
		background-color white
		border 1px solid black
		width 40px
		height 40px
		border-radius 4px
		margin 2px
		&.active
			background-color $medium
