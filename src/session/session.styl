.session.page

	.in-progress
		background-color green
		color white
		padding 10px
		margin 10px
		text-align center

	.no-power
		border 1px solid red
		background-color red
		color	white
		padding 10px
		margin 10px
		text-align center

	.lbl
		background-color $verydark
		padding 10px
		color white

	.delay, .duration
		display flex
		align-content center
		align-items center
		background-color $dark
		>.button
			flex 1
			padding: 15px 0
			border-left: 1px solid $verydark
			text-align center
		>.button.active
			background-color $medium
		>.button:first-child
			border-left: none

	.start
		color: $medium
		margin auto
		transform scale(3)

	.stop
		color: $medium
		margin auto
		transform scale(4)

	.fa.fa-play
		position relative
		left 3px

	.fa.fa-stop
		transform scale(0.8)
